var fancify = require(process.argv[2])
var test = require('tape')

test('string should be wrapped in ~*~', function(s){
    var m = '!'
    t.ok(fancify(s), '~*~' + s + '~*~');
    t.ok(fancify(s, true), '~*~' + s.toUpperCase() + '~*~');

    t.ok(fancify(s, false, ), '~' + m + '~' + s + '~'+ m +'~');
    t.end()
});


     


